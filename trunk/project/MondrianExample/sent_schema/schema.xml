<?xml version="1.0"?>
<Schema name="SentenceSchema">
	<Cube name="Places">
		<Table name="fact_sentence"/>
		<Dimension name="Sentence" foreignKey="sentence_id">
			<Hierarchy hasAll="true" allMemberName="All Sentences" primaryKey="sentence_id">
				<Table name="sentence"/>
				<Level name="author" column="author" uniqueMembers="true"/>
				<Level name="book" column="book_name" uniqueMembers="true"/>
				<Level name="Sentence Number" column="sentence_num" uniqueMembers="true"/>
				<Level name="Sentence Text" column="sentence" uniqueMembers="true"/>
			</Hierarchy>
		</Dimension>
		<Dimension name="Place" foreignKey="place_id">
			<Hierarchy hasAll="true" allMemberName="All Places" primaryKey="place_id">
				<Table name="place"/>
				<Level name="place" column="place_name" uniqueMembers="true"/>
			</Hierarchy>
		</Dimension>
		<Measure name="frequency" column="frequency" aggregator="count" formatString="Standard"/>
	</Cube>
</Schema>
